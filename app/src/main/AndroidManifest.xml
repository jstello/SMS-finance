<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <application
        android:name=".FinanzasApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinanzasPersonales"
        android:debuggable="false"
        tools:targetApi="31"
        tools:ignore="HardcodedDebugMode">
        
        <!-- Dashboard Activity - Main Entry Point -->
        <activity
            android:name=".ui.dashboard.DashboardActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FinanzasPersonales">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Categories Activity -->
        <activity
            android:name=".ui.categories.CategoriesActivity"
            android:exported="true"
            android:label="Categories"
            android:theme="@style/Theme.FinanzasPersonales">
        </activity>
        
        <!-- SMS Permission Test Activity -->
        <activity
            android:name=".ui.sms.SmsPermissionActivity"
            android:exported="true"
            android:label="SMS Test"
            android:theme="@style/Theme.FinanzasPersonales">
            <intent-filter>
                <action android:name="com.example.finanzaspersonales.SMS_TEST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- SMS Receiver for detecting transaction messages -->
        <receiver
            android:name=".data.sms.SmsReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        
        <!-- Transaction List Activity -->
        <activity
            android:name=".ui.transaction_list.TransactionListActivity"
            android:exported="true"
            android:label="Transactions"
            android:theme="@style/Theme.FinanzasPersonales">
        </activity>
        
        <!-- Providers Activity -->
        <activity
            android:name=".ui.providers.ProvidersActivity"
            android:exported="false" />
        <activity
            android:name=".ui.add_transaction.AddTransactionActivity"
            android:exported="false"
            android:label="@string/title_activity_add_transaction"
            android:theme="@style/Theme.FinanzasPersonales" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.FinanzasPersonales" />
        <activity
            android:name=".ui.raw_sms_list.RawSmsListActivity"
            android:exported="false"
            android:label="@string/title_activity_raw_sms_list"
            android:theme="@style/Theme.FinanzasPersonales" />
            
        <!-- Transaction Debug Activity -->
        <activity
            android:name=".ui.debug.TransactionDebugActivity"
            android:exported="false"
            android:label="Transaction Debug"
            android:theme="@style/Theme.FinanzasPersonales" />
        
        <!-- Spending Insights Test Activity -->
        <activity
            android:name=".ui.debug.SpendingInsightsTestActivity"
            android:exported="false"
            android:label="Spending Insights Test"
            android:theme="@style/Theme.FinanzasPersonales" />
        
        <!-- Stats Activity -->
        <activity
            android:name=".ui.stats.StatsActivity"
            android:exported="false"
            android:label="Database Stats"
            android:theme="@style/Theme.FinanzasPersonales" />
        
        <!-- Visualizations Activity -->
        <activity
            android:name=".ui.visualizations.VisualizationsActivity"
            android:exported="false"
            android:label="Visualizations"
            android:theme="@style/Theme.FinanzasPersonales" />
    </application>

</manifest>